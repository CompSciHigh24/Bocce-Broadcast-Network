<head>
   <meta charset="UTF-8">
   <meta name="viewport" content="width=device-width, initial-scale=1.0">
   <title>BBN America's home for Boccee</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
 <link rel="stylesheet" type="text/css" href="BBN.css"/>
</head>
<body>
   <%- include("Partials/navbar.ejs")%>

  <div class="profile input form-control">
   <form action="/" method="POST">
      <label class="input class="form-control"-group-text">Username</label class="input class="form-control"-group-text">
      <input class="form-control" type="text" name="username" required/>
      
     <br>
      
      <label class="input class="form-control"-group-text">Name</label class="input class="form-control"-group-text">
      <input class="form-control" type="text" name="name" required/>
      
     <br>
      
      <label class="input class="form-control"-group-text">Birthplace</label class="input class="form-control"-group-text">
      <input class="form-control" type="text" name="birthplace" required/>
      
     <br>
      
      <label class="input class="form-control"-group-text">Homeclub</label class="input class="form-control"-group-text">
      <input class="form-control" type="text" name="homeclub"/>
      
     <br>
      
      <label class="input class="form-control"-group-text">Hometown</label class="input class="form-control"-group-text">
      <input class="form-control" type="text" name="hometown"/>
      
     <br>
      
      <label class="input class="form-control"-group-text">First Tournament</label class="input class="form-control"-group-text">
      <input class="form-control" type="text" name="firsttournament"/>
      
     <br>
      
      <label class="input class="form-control"-group-text"> Accolades</label class="input class="form-control"-group-text">
      <input class="form-control" type="text" name="accolades"/>
      
     <br>
      
      <label class="input class="form-control"-group-text">Recent Finishes</label class="input class="form-control"-group-text">
      <input class="form-control" type="text" name="recentfinishes"/>
      
      <br>
      <button type="submit">Submit</button>
   </form>
  </div>

      
   <div class="boccee-section">
   <h2>Data Passed</h2>
   <% for(let i = 0; i < boccee.length; i++) { %>
   <div class="comment">
      <a href="/profile/<%=boccee[i]._id%>"><div class="comment-header">
         <span class="username">Username: <%= boccee[i].username%></span>
         <div class="rating">Name: <%= boccee[i].name%></div>
         <div class="rating">Birthplace: <%= boccee[i].birthplace%></div>
         <p class="comment-text">Recent Finish: <%=boccee[i].recentfinishes%>
            <br>
         </p>
      </div></a>
      
      <% } %>
   </div>

      
      <script
         src="/form.js"></script>
      
         <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
         <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js" integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy" crossorigin="anonymous"></script>
      
</body>